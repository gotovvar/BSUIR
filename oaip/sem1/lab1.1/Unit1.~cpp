{ double x,y,z,g;
cin >> x >> y >> z;
g=pow(y,x+1)/(pow(abs(y-2),1.0/3)+3)+(x+y/2)/(2*abs(x+y))*pow(x+1,-1/sin(z));
cout << g << endl;
        getch();
        return 0;
}
